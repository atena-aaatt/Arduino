/*Servo Controller Uygulaması için Yazılan Kod*/

#include <SoftwareSerial.h>
#include <Servo.h>
SoftwareSerial baglanti(7, 8);  //rx, tx

Servo servoMotor;

String gelenVeri;
int aci;


void setup() {
  Serial.begin(9600);
  baglanti.begin(9600);
  servoMotor.attach(6);

  servoMotor.write(0);
}

void loop() {
  while (baglanti.available()) {
    delay(3);
    gelenVeri = baglanti.readStringUntil('\>');
    gelenVeri.trim();
    

    if (gelenVeri.length() > 0 && gelenVeri.length() <= 4) {
      aci = gelenVeri.toInt();

      Serial.println(aci);
      if (aci >= 0 && aci <= 180) {
        servoMotor.write(aci);
      }
      gelenVeri = "";
    }
  }
}
